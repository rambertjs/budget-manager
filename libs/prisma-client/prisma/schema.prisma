// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../src"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum Tipo {
  INGRESO
  EGRESO
}

model Operation {
  id Int @id @default(autoincrement())
  description String
  amount Int // centavos
  date DateTime
  type Tipo
}
